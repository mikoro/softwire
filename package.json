{
	"name": "softwire",
	"description": "A simple 3D software rasterizer",
	"authors": ["Mikko Ronkainen"],
	"homepage": "http://mikkoronkainen.com",
	"license": "Apache-2.0",
	"targetType": "executable",
	"targetPath": "build",
	"targetName": "softwire",
	"sourcePaths": ["source", "import"],
	"importPaths": ["source", "import"],
	"sourceFiles-windows-gdc": ["library/windows/glfw3.a", "library/windows/freetype.a", "misc/resources/softwire.res.o"],
	"dflags-windows-gdc": ["-m32"],
	"lflags-windows-gdc": ["--subsystem=windows", "-lopengl32", "-lgdi32"],
	"copyFiles": ["misc/settings.json"],
	"postBuildCommands-windows": ["xcopy data build\\data /S /E /I /Y"],
	"postBuildCommands-linux": ["cp -R data/ build/"]
}
