{
	"name": "softwire",
	"description": "A simple 3D software rasterizer",
	"authors": ["Mikko Ronkainen"],
	"homepage": "http://mikkoronkainen.com",
	"license": "Apache-2.0",
	"targetType": "executable",
	"targetPath": "build",
	"targetName": "softwire",
	"sourcePaths": ["source", "import"],
	"importPaths": ["source", "import"],
	"sourceFiles-windows-dmd": ["misc/resources/softwire.res"],
	"sourceFiles-windows-gdc": ["misc/resources/softwire.res.o"],
	"sourceFiles-windows-ldc": ["misc/resources/softwire.res.o"],
	"lflags-windows-dmd": ["/SUBSYSTEM:WINDOWS"],
	"dflags-windows-gdc": ["-mwindows"],
	"lflags-windows-ldc": ["--subsystem=windows"],
	"copyFiles-windows": ["misc/dll/glfw3.dll", "misc/dll/freetype.dll"],
	"copyFiles": ["misc/settings.json"],
	"postBuildCommands-windows": ["xcopy data build\\data /S /E /I /Y"],
	"postBuildCommands-linux": ["cp -R data/ build/"]
}
